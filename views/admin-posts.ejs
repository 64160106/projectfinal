<!DOCTYPE html>
<html lang="th">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Posts Management</title>
</head>
<body>
    <h1>Admin Posts Management</h1>
    <p>Welcome, <%= username %> (Admin)</p>
    <a href="/">Home</a>
    <a href="/logout">Logout</a>
    <h2>All Posts</h2>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>User</th>
                <th>Description</th>
                <th>Location</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% posts.forEach(post => { %>
                <tr>
                    <td><%= post.id %></td>
                    <td><%= post.username %></td>
                    <td><%= post.item_description %></td>
                    <td><%= post.location %></td>
                    <td><%= post.status %></td>
                    <td>
                        <form action="/update-status/<%= post.id %>" method="POST" style="display:inline;">
                            <select name="newStatus">
                                <option value="searching" <%= post.status === 'searching' ? 'selected' : '' %>>Searching</option>
                                <option value="found" <%= post.status === 'found' ? 'selected' : '' %>>Found</option>
                                <option value="unclaimed" <%= post.status === 'unclaimed' ? 'selected' : '' %>>Unclaimed</option>
                            </select>
                            <button type="submit">Update Status</button>
                        </form>
                        <form action="/delete-post/<%= post.id %>" method="POST" style="display:inline;">
                            <button type="submit" onclick="return confirm('Are you sure you want to delete this post?')">Delete</button>
                        </form>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</body>
</html>