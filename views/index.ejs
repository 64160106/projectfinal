<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lost and Found - Home</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/styles.css">
    <script src="https://cdn.jsdelivr.net/npm/moment@2.29.1/moment.min.js"></script>
    <style>
        .card {
            height: 100%;
        }

        .card-img-top {
            height: 200px;
            object-fit: cover;
        }

        .status-badge {
            position: absolute;
            top: 10px;
            right: 10px;
            padding: 5px 10px;
            border-radius: 20px;
            font-size: 0.8em;
            font-weight: bold;
        }

        .search-form {
            margin-bottom: 20px;
        }

        .update-form {
            display: flex;
            align-items: center;
        }

        .update-form select {
            margin-right: 5px;
        }
    </style>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="/">Lost and Found</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <% if (username) { %>
                    <li class="nav-item">
                        <span class="nav-link">Logged in as <%= username %></span>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/create-post">Create Post</a>
                    </li>
                    <% if (isAdmin) { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin-dashboard">Admin Dashboard</a>
                        </li>
                    <% } %>
                    <li class="nav-item">
                        <a class="nav-link" href="/logout">Logout</a>
                    </li>
                <% } else { %>
                    <li class="nav-item">
                        <a class="nav-link" href="/login">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/register">Register</a>
                    </li>
                <% } %>
            </ul>
        </div>
    </nav>

    <div class="container mt-5">
        <h2 class="mb-4">Lost and Found Posts</h2>

        <form class="search-form" action="/" method="GET">
            <div class="form-row">
                <div class="col-md-3 mb-3">
                    <input type="text" class="form-control" name="search" placeholder="Search by item, location, username, or contact" value="<%= typeof searchQuery !== 'undefined' ? searchQuery : '' %>">
                </div>
                <div class="col-md-2 mb-3">
                    <select class="form-control" name="type">
                        <option value="">All Types</option>
                        <option value="lost" <%= typeof searchType !== 'undefined' && searchType === 'lost' ? 'selected' : '' %>>Lost</option>
                        <option value="found" <%= typeof searchType !== 'undefined' && searchType === 'found' ? 'selected' : '' %>>Found</option>
                    </select>
                </div>
                <div class="col-md-2 mb-3">
                    <select class="form-control" name="status">
                        <option value="">All Statuses</option>
                        <option value="searching" <%= typeof searchStatus !== 'undefined' && searchStatus === 'searching' ? 'selected' : '' %>>Searching</option>
                        <option value="found" <%= typeof searchStatus !== 'undefined' && searchStatus === 'found' ? 'selected' : '' %>>Found</option>
                        <option value="unclaimed" <%= typeof searchStatus !== 'undefined' && searchStatus === 'unclaimed' ? 'selected' : '' %>>Unclaimed</option>
                    </select>
                </div>
                <div class="col-md-3 mb-3">
                    <input type="date" class="form-control" name="date" placeholder="Search by date" value="<%= typeof searchDate !== 'undefined' ? searchDate : '' %>">
                </div>
                <div class="col-md-2 mb-3">
                    <button type="submit" class="btn btn-primary btn-block">Search</button>
                </div>
            </div>
        </form>

        <% if (posts.length > 0) { %>
            <div class="row">
                <% posts.forEach(post => { %>
                    <div class="col-md-4 mb-4">
                        <div class="card">
                            <div class="card-header bg-transparent">
                                <span class="badge badge-<%= post.post_type === 'lost' ? 'danger' : 'success' %>">
                                    <%= post.post_type === 'lost' ? 'Lost' : 'Found' %>
                                </span>
                                <span class="float-right status-badge badge badge-<%= post.status === 'searching' ? 'warning' : (post.status === 'found' ? 'success' : (post.status === 'unclaimed' ? 'info' : 'secondary')) %>">
                                    <%= post.status %>
                                </span>
                            </div>
                            <img class="card-img-top" src="/uploads/<%= post.image %>" alt="Image of <%= post.item_description %>">
                            <div class="card-body">
                                <h5 class="card-title"><%= post.item_description %></h5>
                                <p class="card-text"><strong>Location:</strong> <%= post.location %></p>
                                <p class="card-text">
                                    <strong><%= post.post_type === 'lost' ? 'Lost on:' : 'Found on:' %></strong>
                                    <%= new Date(post.found_time).toLocaleString('en-GB', { day: 'numeric', month: 'long', year: 'numeric', hour: 'numeric', minute: 'numeric' }) %>
                                </p>
                                <p class="card-text"><strong>Posted by:</strong> <%= post.username %></p>
                                <p class="card-text"><strong>Contact:</strong> <%= post.contact_info %></p>
                            </div>
                            <% if (username === post.username) { %>
                                <div class="card-footer bg-transparent">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <form action="/delete-post/<%= post.id %>" method="POST" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this post?');">
                                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                        </form>
                                        <form action="/update-status/<%= post.id %>" method="POST" class="update-form">
                                            <select name="newStatus" class="form-control form-control-sm">
                                                <option value="searching" <%= post.status === 'searching' ? 'selected' : '' %>>Searching</option>
                                                <option value="found" <%= post.status === 'found' ? 'selected' : '' %>>Found</option>
                                                <option value="unclaimed" <%= post.status === 'unclaimed' ? 'selected' : '' %>>Unclaimed</option>
                                            </select>
                                            <button type="submit" class="btn btn-success btn-sm">Update</button>
                                        </form>
                                    </div>
                                </div>
                            <% } %>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <div class="alert alert-info">No posts available. Be the first to create a post!</div>
        <% } %>
    </div>

    <!-- Image Modal -->
    <div class="modal fade" id="imageModal" tabindex="-1" role="dialog" aria-labelledby="imageModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="imageModalLabel">Full Image</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <img src="" class="img-fluid" id="modalImage" alt="Full size image">
                </div>
            </div>
        </div>
    </div>



    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <script>
        $(document).ready(function() {
            $('.card-img-top').click(function() {
                var imgSrc = $(this).attr('src');
                $('#modalImage').attr('src', imgSrc);
                $('#imageModal').modal('show');
            });
        });
    </script>

</body>

</html>